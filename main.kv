ScreenManager:
    MDScreen:
        name: "login"
        MDBoxLayout:
            orientation: 'vertical'
            padding: '15dp'
            md_bg_color: [1,1,1,1]
            AsyncImage:
                source: 'assets/images/logo.png'
                text: 'Your Image'
            AsyncImage:
                source: 'assets/images/login.png'
                text: 'Your Image'
            MDLabel:
                text:"Log-In"
                theme_text_color:"Primary"
                font_size:28
                bold: True 
            MDTextField:
                id: email_input
                hint_text: "Email"
                required: True
                helper_text: "user@gmail.com"
                validator: "email"

            MDTextField:
                id: password_input
                hint_text: "Password"
                password: True
                required: True
                helper_text_mode: "on_error"
                icon_right: "eye-off"
                on_icon_right: app.toggle_password_visibility()

            MDFillRoundFlatButton:
                text:"Sign in"
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                padding: 50, 0, 50, 0 
                on_release: app.login()
                
                width: self.parent.width * 0.8
                size_hint_x: 0.8 
            MDLabel:
                id: status_label
                text: ""
                theme_text_color: "Error"
            MDTextButton:
                id: go_sign_in
                text: "Don't have an account ? Sign Up"
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                on_release: root.current = 'registre'
    MDScreen:
        name: "registre"
        MDBoxLayout:
            orientation: 'vertical'
            padding: '15dp'
            md_bg_color: [1,1,1,1]
            AsyncImage:
                source: 'assets/images/logo.png'
                text: 'Your Image'
            AsyncImage:
                source: 'assets/images/login.png'
                text: 'Your Image'
            MDTextField:
                id: username_input
                hint_text: "Username"
                required: True
                helper_text_mode: "on_error"
                line_color_normal: 1, 0, 1, 1  # Red color when not focused
                line_color_focus: 0, 1, 0, 1  # Green color when focused
            
            MDTextField:
                id: email_input
                hint_text: "Email"
                required: True
                helper_text_mode: "on_error"
                line_color_normal: 1, 0, 1, 1  # Red color when not focused
                line_color_focus: 0, 1, 0, 1  # Green color when focused

            MDTextField:
                id: password_input
                hint_text: "Password"
                password: True
                required: True
                helper_text_mode: "on_error"
                icon_right:"assets/images/logo.png"
            MDTextField:
                id: confirme_password_input
                hint_text: "Password"
                password: True
                required: True
                helper_text_mode: "on_error"
                icon_right:"assets/images/logo.png"
            MDRaisedButton:
                text:"Sign Up"
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                on_release: app.login()
            MDLabel:
                id: status_label
                text: ""
                theme_text_color: "Error"
            MDLabel:
                id: go_sign_in
                text: "you have an account"
    MDScreen:
        name:"main"
        MDFloatLayout:
            md_bg_color: [1,1,1,1]
            MDRaisedButton:
                text:"Logout"
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                on_release: app.logout()


